
public class MainClass {

	public static void main(String[] args) {
		/*
		 	편의점
		 	지불금액 : 3,210원
		 	본인금액 : 10,000원
		 	
		 	거스름돈 -> ?
		 	
		 	5000원 -> ?장
		 	1000원 -> ?장
		 	 500원 -> ?개
		 	 100원 -> ?개
		 	  50원 -> ?개
		 	  10원 -> ?개
		 */
		
		int pay;
		pay = 10000;
		
		int price;
		pay = 3210;
		
		int remain;
		remain = pay - price;
		
		System.out.println("거스름돈은 " + remain + "원 입니다.");

	}

}
